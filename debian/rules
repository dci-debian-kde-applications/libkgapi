#!/usr/bin/make -f

export DEB_LDFLAGS_MAINT_APPEND := -Wl,--as-needed

%:
	dh $@ --with kde --parallel --fail-missing

override_dh_auto_configure:
	dh_auto_configure -Skde -- -DLIB_INSTALL_DIR=/usr/lib/$(DEB_HOST_MULTIARCH) -DKDE4_BUILD_TESTS=TRUE

override_dh_shlibdeps:
	dh_shlibdeps -- -xkdepim-runtime

override_dh_strip:
	dh_strip -plibkgapi2-2 --dbg-package=libkgapi2-2-dbg
